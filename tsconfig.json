{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strictNullChecks": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
